{
    "blocks": [
        {
            "type": "header",
            "text": {
                "type": "plain_text",
                "text": "Select the event  ðŸ”Ž"
            }
        },
        {
            "type": "divider"
        },
        {{#if events.0}}
        {
			"type": "section",
            "text": {
                "text": "Select the event you want to randomly pick a participant:",
                "type": "mrkdwn"
            },
			"accessory": {
				"type": "static_select",
				"action_id": "select_event",
				"options": [
                    {{#each events}}
					{
						"value": "{{this.id}}",
						"text": {
							"type": "plain_text",
							"text": "{{this.text}}"
						}
					}{{#unless @last}},{{/unless}}
                    {{/each}}
				]
			}
		},
        {{else}}
        {
			"type": "section",
            "text": {
                "text": "No events found! ðŸ¤·",
                "type": "mrkdwn"
            }
		},
        {{/if}}
        {
            "type": "divider"
        },
        {
            "type": "actions",
            "block_id": "select_event_pick_actions",
            "elements": [
                {
                    "type": "button",
                    "text": {
                        "type": "plain_text",
                        "text": "Next"
                    },
                    "style": "primary",
                    "value": "ok"
                },
                {
                    "type": "button",
                    "text": {
                        "type": "plain_text",
                        "text": "Cancel"
                    },
                    "value": "cancel"
                }
            ]
        }
    ]
}